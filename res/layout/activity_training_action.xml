<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="225dp"
	    android:background="@color/white">
	    
        <ImageView 
            android:id="@+id/iv_bg"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/train_action_bg"/>
        
	    <VideoView
	        android:id="@+id/vv_video"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="60dp"/>
	    
	    <Button 
	        android:id="@+id/btn_before"
	        android:layout_width="90dp"
	        android:layout_height="35dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="15dp"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:paddingLeft="2dp"
	        android:paddingRight="2dp"
	        android:text="上一动作"
	        android:background="@drawable/train_action_btn"/>
	    
	    <TextView 
	        android:id="@+id/tv_current_action"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/tv_fenge"
	        android:layout_marginRight="2dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="3dp"
	        android:textSize="30sp"
	        android:textColor="#ffae00"
	        android:text="1"/>
	    <TextView 
	        android:id="@+id/tv_fenge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="7dp"
	        android:textSize="22sp"
	        android:textColor="@color/white"
	        android:text="/"/>
	    <TextView 
	        android:id="@+id/tv_total_action"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_fenge"
	        android:layout_alignBottom="@+id/tv_fenge"
	        android:textSize="22sp"
	        android:textColor="@color/white"
	        android:text="7"/>
	    
	    <Button 
	        android:id="@+id/btn_next"
	        android:layout_width="90dp"
	        android:layout_height="35dp"
			android:layout_alignBottom="@+id/btn_before"
			android:layout_alignParentRight="true"
	        android:layout_marginRight="15dp"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:paddingLeft="2dp"
	        android:paddingRight="2dp"
	        android:text="下一动作"
	        android:background="@drawable/train_action_btn"/>

	</RelativeLayout>
    
    <Button 
        android:id="@+id/btn_train_task_list"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/RelativeLayout2"
        android:text="训练成绩"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="21sp"
        android:text="俄罗斯转体" />
    
    <ImageButton 
        android:id="@+id/ib_fenge"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_action_name"
        android:layout_marginTop="17dp"
        android:background="@drawable/fenge_line"/>

    <TextView
        android:id="@+id/tv_action_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_action_name"
        android:layout_below="@+id/ib_fenge"
        android:layout_marginTop="20dp"
        android:text="难度系数&#160;&#160;:&#160;&#160;"
        android:textColor="#333333"
        android:textSize="18sp" />

    <ImageButton 
        android:id="@+id/iv_star1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/tv_action_grade"
        android:layout_below="@+id/ib_fenge"
        android:layout_marginTop="25dp"
        android:background="@drawable/star_unsel"/>
    <ImageButton 
        android:id="@+id/iv_star2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/iv_star1"
        android:layout_alignBottom="@+id/iv_star1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star_unsel"/>
    <ImageButton 
        android:id="@+id/iv_star3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/iv_star2"
        android:layout_alignBottom="@+id/iv_star2"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star_unsel"/>
    <ImageButton 
        android:id="@+id/iv_star4"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/iv_star3"
        android:layout_alignBottom="@+id/iv_star3"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star_unsel"/>
    <ImageButton 
        android:id="@+id/iv_star5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toRightOf="@+id/iv_star4"
        android:layout_alignBottom="@+id/iv_star4"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star_unsel"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_action_grade"
        android:layout_below="@+id/tv_action_grade"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:paddingRight="15dp"
        android:text="动作要点&#160;&#160;:&#160;&#160;"/>
    <TextView
        android:id="@+id/tv_action_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_action"
        android:layout_below="@+id/tv_action"
        android:layout_marginTop="5dp"
        android:textColor="#666666"
        android:textSize="15sp"
        android:paddingRight="15dp"/>

</RelativeLayout>