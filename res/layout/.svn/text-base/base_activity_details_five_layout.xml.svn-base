<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 动态详情复用ui -->

    <RelativeLayout
        android:id="@+id/layout_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >

        <com.fox.exercise.util.RoundedImage
            android:id="@+id/image_icon1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/sports_user_edit_portrait" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_icon1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/sports_find_othername1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="@string/txt_name_text"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/is_manorwomen_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/sports_find_othername1"
                        android:src="@drawable/friends_group_sexman" />

                    <TextView
                        android:id="@+id/tx_start_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/tx_sport_address"
                        android:gravity="center_vertical"
                        android:textColor="#949494"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_sport_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:gravity="center_vertical"
                        android:text="北京市大兴区"
                        android:textColor="#949494"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_sport_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/sports_find_othername1"
                        android:layout_marginLeft="2dp"
                        android:text="运动第三十天   总公里50公里"
                        android:textColor="#949494"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tx_detils1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tx_sport_huodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/huodong_biaoqian_icon"
                android:drawablePadding="3dp"
                android:gravity="left|center_vertical"
                android:text="#吃大虾 #吃龙虾"
                android:textColor="#ff8a00"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/detils_img_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/photo_background"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/detils_img_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/photo_background"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/detils_img_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/photo_background"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/detils_img_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/photo_background"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/detils_img_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/photo_background"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                android:id="@+id/tx_sport_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/sports_added"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/list_user_guanzhu"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stroke_guanzhu_btn_background"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_user_guanzhu_addone"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="已关注"
            android:textColor="@color/black"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stroke_nocicle_gray_background"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/list_user_pinglun_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/list_user_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_dongtai_huifu"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="回复"
                    android:textColor="#333333" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E3E3E3" />

            <RelativeLayout
                android:id="@+id/list_user_zan_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/list_user_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/user_dongtai_zan"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="赞(0)"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/list_user_zan_addone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="+1"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E3E3E3" />

            <RelativeLayout
                android:id="@+id/list_user_fenxiang_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/list_user_fenxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_dongtai_fenxiang"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="#333333" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>