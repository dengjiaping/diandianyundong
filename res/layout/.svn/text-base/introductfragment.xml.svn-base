<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/remind"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="@string/activity_time"/>
   <TextView 
        android:id="@+id/action_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/new_black"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:text="2014.06.15-2014.06,30"/>
   <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/remind"
        android:visibility="gone"
        android:textSize="15sp"
        android:text="@string/activity_rules"
        android:layout_marginTop="10dp"/>
   <TextView 
       android:id="@+id/action_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/new_black"
         android:visibility="gone"
        android:text="1、用户通过应用记录活动时间内的骑行信息。"/>
   
   <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"> 
       <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <ImageView 
              android:id="@+id/activity_detail_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
        </RelativeLayout>
   </ScrollView> 

</LinearLayout>