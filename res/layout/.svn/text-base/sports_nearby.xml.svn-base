<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearbyActivity_baidu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sports_bg" >
   
    <com.fox.exercise.view.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res/com.fox.exercise"
        android:id="@+id/nearby_pull_refresh_list_baidu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        ptr:mode="both"
         />
       <RelativeLayout 
            android:id="@+id/nearby_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
                  <com.baidu.mapapi.map.MapView
                        android:id="@+id/bmapView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true" />
       </RelativeLayout >
</RelativeLayout>