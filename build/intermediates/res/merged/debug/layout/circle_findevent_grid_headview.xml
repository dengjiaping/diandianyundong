<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/find_qushi_icon"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <com.fox.exercise.newversion.view.CollapsibleTextView
            android:id="@+id/collaps_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/title_tuijianorall_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:baselineAligned="false"
            android:layout_marginTop="8dp" >

            <RelativeLayout
                android:id="@+id/qushi_tuijian_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/qushi_tuijian_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="推荐"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/qushi_tuijian__line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/qushi_tuijian_tv"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qushi_all_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/qushi_all_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/qushi_all_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/qushi_all_tv"
                    android:background="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>