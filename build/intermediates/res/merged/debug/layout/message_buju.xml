<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_sport_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!--<ImageView
            android:id="@+id/message_img_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sports_sys_message_box" />-->

        <TextView
            android:id="@+id/text_xx"
            style="@style/sports_txt_color_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sports_show"
            android:textSize="15sp" />

        <Button
            android:id="@+id/focusText"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_xx"
            android:background="@drawable/tip_bg"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/image_into_icon"
                style="@style/sports_txt_color_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/cebian_daohang_into" />


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/message_top_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/sports_bg_line" />

    <RelativeLayout
        android:id="@+id/re_xitongmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- <ImageView
             android:id="@+id/xitong_message"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:src="@drawable/mysports_invite_btn2" />-->

        <TextView
            android:id="@+id/text_xt"
            style="@style/sports_txt_color_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sports_sys_message"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tishi1"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/text_xt"
            android:background="@drawable/tip_bg"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/image_into_icon1"
                style="@style/sports_txt_color_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/cebian_daohang_into" />


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/message_top_view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/sports_bg_line" />

    <RelativeLayout
        android:id="@+id/re_fangkemessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- <ImageView
             android:id="@+id/fangke"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:src="@drawable/sports_fans_box" />-->

        <TextView
            android:id="@+id/text_fk"
            style="@style/sports_txt_color_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sports_visitors"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tishi2"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/text_fk"
            android:background="@drawable/tip_bg"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/image_into_icon2"
                style="@style/sports_txt_color_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/cebian_daohang_into" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
