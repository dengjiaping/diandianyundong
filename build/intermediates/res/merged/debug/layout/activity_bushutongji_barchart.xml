<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <RelativeLayout 
        android:id="@+id/rl_list"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1">
        <TextView 
            android:id="@+id/tv_bg"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#f6f6f6"/>
        <com.fox.exercise.newversion.bushutongji.HorizontalListView
		  	android:id="@+id/listview"
		  	android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		  	android:background="@color/translucent"/>
    </RelativeLayout>
	<RelativeLayout 
        android:id="@+id/rl_content"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_weight="1">
            
	    <RelativeLayout 
	        android:id="@+id/rl_yuanhuan"
	        android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="25dp">
	        
	        <ImageView 
		        android:id="@+id/iv_yuanhuan"
		        android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/bushutongji_yuanhuan"/>
		    	    
	        <TextView 
			    android:id="@+id/tv_steps_content"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_marginTop="20dp"
			    android:layout_centerHorizontal="true"
			    android:textColor="#000000"
			    android:text="步数"
			    android:textSize="16sp"/>
	        
	        <TextView 
			    android:id="@+id/tv_steps"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
				android:layout_centerVertical="true"
			    android:layout_centerHorizontal="true"
			    android:textColor="#000000"
			    android:fontFamily="DIN Medium"
			    android:text="0"
			    android:textSize="40sp"/>
	    </RelativeLayout>
	    <ImageView 
            android:id="@+id/iv_fenge"
            android:layout_height="50dp"
            android:layout_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="#999999"/>
	    <RelativeLayout 
	        android:id="@+id/rl_left"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_toLeftOf="@+id/iv_fenge"
	        android:layout_marginRight="40dp"
	        android:layout_alignBottom="@+id/iv_fenge">
	        <TextView 
	            android:id="@+id/tv_juli_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/bushutongji_juli"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="#999999"
	            android:textSize="12sp"
	            android:text="&#160;&#160;&#160;距离"/>
	        <TextView 
	            android:id="@+id/tv_juli"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="#999999"
	            android:textSize="16sp"
	            android:text="0Km"/>
	    </RelativeLayout>
        <RelativeLayout 
	        android:id="@+id/rl_right"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_toRightOf="@+id/iv_fenge"
	        android:layout_marginLeft="40dp"
	        android:layout_alignBottom="@+id/iv_fenge">
	        <TextView 
	            android:id="@+id/tv_reliang_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:drawableLeft="@drawable/bushutongji_reliang"
	            android:textColor="#999999"
	            android:textSize="12sp"
	            android:text="&#160;&#160;&#160;热量"/>
	        <TextView 
	            android:id="@+id/tv_reliang"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="#999999"
	            android:textSize="16sp"
	            android:text="0Cal"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>