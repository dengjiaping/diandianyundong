<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FDAD2A"
        android:gravity="center"
        android:text="@string/text_share_two"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/share_dialog_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp" >
    </GridView>

    <TextView
        android:id="@+id/share_cacle_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/stroke_nocicle_personal_background"
        android:gravity="center"
        android:text="@string/sports_cancel"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>