<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFAD00"
    android:paddingBottom="20dp"
    android:paddingTop="10dp" >

    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="60dp">
    	
        <TextView 
	        android:id="@+id/tv_leijixunlian"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="40dp"
	        android:text="累计训练&#160;:&#160;"
	        android:textSize="18sp"
	        android:textColor="#333333"/>
    
	    <TextView 
	        android:id="@+id/tv_xiaoshi_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_leijixunlian"
	        android:layout_alignBottom="@+id/tv_leijixunlian"
	        android:text="18"
	        android:textSize="35sp"
	        android:textColor="#333333"/>
	    <TextView 
	        android:id="@+id/tv_xiaoshi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_xiaoshi_value"
	        android:layout_marginLeft="3dp"
	        android:layout_alignBottom="@+id/tv_xiaoshi_value"
	        android:text="小时"
	        android:textSize="18sp"
	        android:textColor="#333333"/>
	    <TextView 
	        android:id="@+id/tv_fenzhong_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_xiaoshi"
	        android:layout_alignBottom="@+id/tv_xiaoshi"
	        android:layout_marginLeft="3dp"
	        android:text="38"
	        android:textSize="18sp"
	        android:textColor="#333333"/>
	    <TextView 
	        android:id="@+id/tv_fenzhong"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_fenzhong_value"
	        android:layout_alignBottom="@+id/tv_fenzhong_value"
	        android:layout_marginLeft="3dp"
	        android:text="分钟"
	        android:textSize="18sp"
	        android:textColor="#333333"/>
	    <ImageButton 
	        android:id="@+id/ib_xunlianchengji"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/xunlianchengji"/>
    </RelativeLayout>
           
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" 
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="训练次数"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yundong_cishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热量(Cal)"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yundong_laluli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2103"
            android:textColor="@color/black"
            android:textSize="20sp" 
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计天数"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yundong_di_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>