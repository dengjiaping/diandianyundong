<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/stroke_cicle_whrite_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_halfcicle_yellow_background"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="@string/sports_alertdialog_title"
	        android:textColor="@color/white"
	        android:textSize="20sp" />

    </LinearLayout>
    
	<TextView
	    android:id="@+id/message"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="15dp"
	    android:text="@string/message_text"
	    android:textColor="@color/hint_login"
	    android:textSize="16sp" />
	
	<LinearLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:background="@drawable/sports_bg_line" >
	    
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/layout_bottom"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    >

		<Button 
	        android:id="@+id/bt_cancel"
	        android:layout_marginLeft="5dp" 
	        android:layout_marginRight="5dp"     
	        android:layout_width="0dp"
	        android:layout_height="36dp"
	        android:layout_weight="1"
	        android:background="@drawable/sports_btn_gray1"
	        android:text="@string/dialog_button_cancel"
	        android:textSize="16sp"
	        android:textColor="@color/sports_bt_gray"/>
	    
	    <Button 
	        android:id="@+id/bt_giveup"
	        android:layout_width="0dp"
	        android:layout_height="36dp"
	        android:layout_weight="1"
	        android:background="@drawable/sports_slim_btn_click1"
	        android:text="@string/dialog_button_giveup"
	        android:textColor="@android:color/white"
	        android:visibility="gone"
	        android:textSize="16sp"/>
	    
	    <Button
		    android:id="@+id/bt_ok"
		    android:layout_width="0dp"
		    android:layout_height="36dp"  
		     android:layout_marginLeft="5dp"  
		    android:layout_marginRight="5dp"
		    android:layout_weight="1"
		    android:background="@drawable/sports_slim_btn_click1"
		    android:text="@string/dialog_button_commit"
		    android:textColor="@android:color/white"
		    android:textSize="16sp" />
	    
	</LinearLayout>
</LinearLayout>