<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_cicle_whrite_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_halfcicle_yellow_background"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="提示"
	        android:textColor="@color/white"
	        android:textSize="20sp" />

    </LinearLayout>
    
	<TextView
	    android:id="@+id/message"
	    android:layout_marginTop="20dp" 
	    android:layout_marginBottom="15dp" 
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="亲，不要半途而废哦，继续吧"
        android:textColor="@color/hint_login"/>
	
	<LinearLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:background="@drawable/sports_bg_line"
        android:visibility="gone"
         >
	    
    </LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/layout_bottom"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="25dp"
	    android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
	    >

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#999999"
            android:text="放弃下载"
            android:textSize="20sp"
            android:background="@drawable/sports_btn_gray2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#160;&#160;&#160;&#160;"
            />
        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="继续下载"
            android:background="@drawable/sports_slim_btn_click1"
             />
	</LinearLayout>
</LinearLayout>