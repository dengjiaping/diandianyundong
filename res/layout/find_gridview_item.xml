<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/all_tuijian_icon"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/all_tuijian_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/list_user_zans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/user_dongtai_zan"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="29"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/list_user_zan_addones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="+1"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_user_pingluns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/list_user_zans"
            android:drawableLeft="@drawable/user_dongtai_huifu"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="0"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>