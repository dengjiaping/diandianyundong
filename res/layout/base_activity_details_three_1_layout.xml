<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <!-- 动态详情复用ui -->

        <RelativeLayout
            android:id="@+id/layout_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >

            <com.fox.exercise.util.RoundedImage
                android:id="@+id/image_icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/sports_user_edit_portrait" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_icon1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/sports_find_othername1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="8dp"
                            android:singleLine="true"
                            android:text="@string/txt_name_text"
                            android:textColor="#1e4d72"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/is_manorwomen_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/sports_find_othername1"
                            android:src="@drawable/friends_group_sexman"
                            android:visibility="gone"  />

                        <ImageView
                            android:id="@+id/iv_zhiding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/iv_ding"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tx_sport_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/sports_find_othername1"
                            android:layout_marginLeft="8dp"
                            android:text=""
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

               <TextView
                    android:id="@+id/tx_detils1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="2dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tx_xianshiquanbu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="全文"
                    android:textColor="#1e4d72"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tx_sport_huodong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/huodong_biaoqian_icon"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="#吃大虾 #吃龙虾"
                    android:textColor="#ff8a00"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/detils_img_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/photo_background"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/detils_img_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:background="@color/photo_background"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/detils_img_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/photo_background"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tx_start_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_sport_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tx_start_times"
                        android:gravity="center_vertical"
                        android:text="北京市大兴区"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tx_sport_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/sports_added"
                        android:textColor="#1e4d72"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tx_sport_toplist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/tx_sport_del"
                        android:text="置顶"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tx_sport_removetop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/tx_sport_toplist"
                        android:text="取消置顶"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/list_user_guanzhu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/sportshow_guanzhu"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/list_user_guanzhu_addone"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="已关注"
                android:textSize="13sp"
                android:textColor="#e1e1e1"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_comment_zan_shaer"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/stroke_nocicle_gray_background"
                android:orientation="horizontal"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/list_user_pinglun_layout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/list_user_pinglun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user_dongtai_huifu"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="回复"
                        android:textColor="#333333" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E3E3E3" />

                <RelativeLayout
                    android:id="@+id/list_user_zan_layout1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/list_user_zan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/user_dongtai_zan"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/list_user_zan_addone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="+1"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E3E3E3" />

                <RelativeLayout
                    android:id="@+id/list_user_fenxiang_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/list_user_fenxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user_dongtai_fenxiang"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="分享"
                        android:textColor="#333333" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_zan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#F9F9F9" >

                <TextView
                    android:id="@+id/dianzan_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_dianzanimage"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dianzan_nums"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/login_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/sportshow_alreadyzan" />
                    </RelativeLayout>

                      <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_one"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />

                    <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_two"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />

                    <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_three"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />

                    <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_four"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />

                    <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_five"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />

                    <com.fox.exercise.util.RoundedImage
                        android:id="@+id/dianzan_six"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/sports_user_edit_portrait_male"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/zan_more_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/zan_more"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/good_text_detils_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_one_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/find_good_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/user_dongtai_zan" />

                    <TextView
                        android:id="@+id/good_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/remind"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/find_text_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/text_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/remind"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_talk_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/list_user_pinglun_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:text="显示更多"
            android:background="#f4f4f4"
            android:layout_marginTop="10dp"
            android:textColor="#999999"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/pinglun_fenxiang_dianzan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sportshow_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                android:background="@drawable/sportshow_sent" />

            <TextView
                android:id="@+id/good_and_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/sportshow_background"
                android:gravity="center_vertical"
                android:text="    我也说一句"
                android:textColor="#949494"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/sportshow_shaer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:background="@drawable/sportshow_shaer" />

            <RelativeLayout
                android:id="@+id/list_user_zan_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/list_user_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/user_dongtai_zan"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="(0)"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/list_user_zan_addone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="+1"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/text_good_bgline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sports_bg_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/zhiding_001"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/toplist"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>