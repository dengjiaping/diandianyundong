<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tip_bg2"
        android:gravity="center"
        android:text="@string/his_jilu"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/zhuzhuang_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" >

        <RelativeLayout
            android:id="@+id/biaoge"
            android:layout_width="266dp"
            android:layout_height="132dp"
             >

            <RelativeLayout
                android:id="@+id/month"
                android:layout_width="42dp"
                android:layout_height="132dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/month_english"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="Jun"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/month_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#43444f"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_yue"
                        android:textColor="#43444f"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/mCalKm"
                android:layout_width="185dp"
                android:layout_height="114dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/month"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="114dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cal_1"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:background="@drawable/biaoge_cal" />

                    <ImageView
                        android:id="@+id/km_1"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/biaoge_km" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="114dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cal_2"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:background="@drawable/biaoge_cal" />

                    <ImageView
                        android:id="@+id/km_2"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/biaoge_km" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="114dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cal_3"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:background="@drawable/biaoge_cal" />

                    <ImageView
                        android:id="@+id/km_3"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/biaoge_km" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="114dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cal_4"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:background="@drawable/biaoge_cal" />

                    <ImageView
                        android:id="@+id/km_4"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/biaoge_km" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="114dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cal_5"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:background="@drawable/biaoge_cal" />

                    <ImageView
                        android:id="@+id/km_5"
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/biaoge_km" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biaoge"
            android:layout_marginLeft="68dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/day1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30"
                android:textColor="#43444f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textColor="#43444f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/day3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textColor="#43444f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/day4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textColor="#43444f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textColor="#43444f"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>