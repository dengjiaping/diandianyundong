<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

    

    <ImageView
        android:id="@+id/tanchu_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_22" 
        />

    <ImageView
        android:id="@+id/tanchu_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tanchu_close_line"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tanchu_img"
         />
    
     <ImageView 
         android:id="@+id/close_tanchu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tanchu_close_btn"
        android:layout_below="@+id/tanchu_line"
        android:layout_marginTop="-20dp"
        />

</RelativeLayout>