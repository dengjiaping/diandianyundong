<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:orientation="horizontal"
    	android:padding="10dp"
	    >
	     <RelativeLayout
        	android:id="@+id/layout_icon"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
      	 >

       	 	<com.fox.exercise.util.RoundedImage
            	android:id="@+id/image_icon1"
            	android:layout_width="44dp"
            	android:layout_height="44dp"
            	android:layout_centerInParent="true"
           		android:scaleType="centerInside"
            	android:src="@drawable/sports_user_edit_portrait" />
    	</RelativeLayout>

   		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
        	<TextView
            	android:id="@+id/sports_find_othername1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_gravity="top"
            	android:layout_marginLeft="8dp"
            	android:layout_marginRight="17dp"
            	android:ellipsize="end"
            	android:gravity="left|center_vertical"
            	android:singleLine="true"
            	android:text="@string/txt_name_text"
            	android:textColor="@color/remind"
            	android:textSize="16sp" />
         	<TextView
            	android:id="@+id/tx_detils1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginRight="5dp"
             	android:layout_marginLeft="8dp"
            	android:gravity="left|center_vertical"
            	android:textColor="#3a3f47"
            	android:textSize="16sp" />
			<LinearLayout 
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_gravity="left"
            	android:layout_marginLeft="8dp">
		    	<ImageView
            	android:id="@+id/detils_img_one"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	android:scaleType="centerCrop"
            	android:background="@color/photo_background"         
            	/>
		     	<ImageView
            	android:id="@+id/detils_img_two"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	android:scaleType="centerCrop"  
            	android:layout_marginLeft="4dp"
            	android:background="@color/photo_background"      
            	/>
			</LinearLayout>
        
      
        		<RelativeLayout
		    	    android:layout_width="fill_parent"
		    	    android:layout_height="wrap_content"
		    	    android:orientation="horizontal"
		    	    android:layout_marginTop="5dp">
		    	    <TextView
            		android:id="@+id/tx_start_times"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
             		android:layout_marginLeft="8dp"
            		android:gravity="left|center_vertical"
            		android:layout_alignParentLeft="true"
            		android:textColor="#999999"
            		android:textSize="14sp" />
		    	    <TextView
            		android:id="@+id/tx_delete_find"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
             		android:layout_marginLeft="5dp"
            		android:gravity="left|center_vertical"
            		android:textColor="@color/remind"
            		android:text="@string/detail_delete"
            		android:layout_toRightOf="@id/tx_start_times"
            		android:textSize="14sp" 
            		android:visibility="gone"/>
		    	    <ImageView 
		    	        android:id="@+id/good_and_text"
		    	        android:layout_width="wrap_content"
		    	        android:layout_height="wrap_content"
		    	       android:layout_alignParentRight="true"
		    	       android:layout_centerVertical="true"
		    	        android:paddingLeft="10dp"
		    	        android:paddingRight="10dp"
		    	        android:src="@drawable/find_good_and_text"/>
		    </RelativeLayout>  
         	<LinearLayout 
		        android:id="@+id/good_text_detils_layout"
		        android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical"
        		>
		    	 <View
		    	     android:id="@+id/text_good_bgline"
        			android:layout_marginTop="2dp"
        			android:layout_width="fill_parent"
        			android:layout_height="1dp"
        			android:background="@drawable/sports_bg_line"
        			android:layout_marginLeft="8dp"
        			 /> 
		        <LinearLayout 
		            android:id="@+id/layout_one_number"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            >
		            <LinearLayout 
		                android:id="@+id/find_good_num_layout"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal"
		                android:layout_marginLeft="8dp"
		                android:visibility="gone"
		                >
		                <ImageView 
		                android:layout_width="15dp"
		                android:layout_height="15dp"
		                android:layout_gravity="center_vertical"/>
		                <TextView 
		                android:layout_marginLeft="5dp"
		                android:id="@+id/good_people"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:textColor="@color/remind"
		                android:gravity="center"/>
		            </LinearLayout>
		             <LinearLayout 
		                android:id="@+id/find_text_num_layout"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal"
		                android:layout_marginLeft="8dp"
		                android:visibility="gone"
		                >
		                <ImageView 
		                android:layout_width="15dp"
		                android:layout_height="15dp"
		                android:layout_gravity="center_vertical"/>
		                <TextView 
		                android:layout_marginLeft="5dp"
		                android:id="@+id/text_people"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:textColor="@color/remind"
		                android:gravity="center"
		                />
		            </LinearLayout>
		        </LinearLayout>
		        <LinearLayout 
		            android:id="@+id/layout_talk_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:layout_marginLeft="8dp"
		            >
		             
		        </LinearLayout>
		    </LinearLayout>
    	</LinearLayout>
	</LinearLayout>
    <View
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/sports_bg_line" /> 
	
   
</LinearLayout>