<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/health_sleep_bolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sleep_quxian_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
         >

        <com.fox.exercise.newversion.view.StopWatchView
            android:id="@+id/stopWatchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#243443" />
        
        <TextView
             android:id="@+id/stopWatchView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/celebration_color"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/health_sleep_bolayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-45dp"
        android:background="@drawable/sleep_button"
        android:gravity="center"
        android:paddingTop="12dp"
        android:text="@string/start_sleep"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sleep_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/sleep_baogao_button"
        android:gravity="center"
        android:text="@string/sleep_record"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sleep_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sleep_record"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sleep_tip"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/sleep_tip"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sleep_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sleep_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/sleep_tip"
        android:textColor="#999999"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/sleep_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="内测版本-抢先体验"
        android:textColor="#999999"
        android:textSize="12sp" />

</RelativeLayout>