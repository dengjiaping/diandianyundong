<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_nearby_cover"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:background="@drawable/nearby_news_bg"
        android:orientation="horizontal" >
   <com.fox.exercise.util.RoundedImage
        android:id="@+id/nearby_cover_img"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="5dp"
        android:src="@drawable/sports_user_edit_portrait" />  
        <LinearLayout
	        android:layout_width="135dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="5dp"
	        android:orientation="vertical" >
        <TextView
            android:id="@+id/tx_cover_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_name_text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tx_cover_Distance"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="@string/txt_time_text"
            android:textColor="@color/sports_bt_gray"
            android:textSize="12sp" />
      </LinearLayout>
    </LinearLayout>
      <ImageView 
        	android:id="@+id/tx_cover_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
			android:background="@drawable/map_middle1"
        />
</LinearLayout>