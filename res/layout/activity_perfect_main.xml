<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/sports_title_bg" >

        <TextView
            android:id="@+id/top_title"
            style="@style/topTitle"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <com.fox.exercise.util.RoundedImage
        android:id="@+id/perfect_image_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/sports_user_edit_portrait_male" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/upload_photo"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/perfect_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/stroke_linecicle_yellow_background"
        android:gravity="left|center_vertical"
        android:hint="@string/user_name_edit_hint"
        android:maxLength="15"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_login"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/perfect_bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/sports_slim_btn_click1"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/stopBtn_text"
        android:textColor="@color/white" >
    </TextView>

    <RelativeLayout
        android:id="@+id/send_menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8c000000"
        android:visibility="gone" >
    </RelativeLayout>

</LinearLayout>