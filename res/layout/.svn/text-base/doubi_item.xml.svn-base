<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/doubi_img"
        android:layout_width="fill_parent"
        android:layout_height="162dp"
        android:layout_margin="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/doubi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doubi_img"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:maxEms="16"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/doubi_time"
        android:layout_below="@+id/doubi_img"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/doubi_time"
        android:src="@drawable/tuijian_time" />

    <TextView
        android:id="@+id/doubi_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/doubi_img"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="12dp"
        android:text="06/01"
        android:textColor="#999999"
        android:textSize="10sp" />

</RelativeLayout>