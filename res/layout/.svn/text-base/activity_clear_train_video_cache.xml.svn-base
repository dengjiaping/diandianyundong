<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_cicle_whrite_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_halfcicle_yellow_background"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="清除缓存"
	        android:textColor="@color/white"
	        android:textSize="20sp" />

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >

	    <TextView
	        android:id="@+id/tv_pic_clear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="清除图片缓存"
	        android:textColor="@color/black"
	        android:textSize="20sp" />
	    <TextView
	        android:id="@+id/tv_pic_clear_cache"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_pic_clear"
	        android:layout_marginLeft="20dp"
	        android:singleLine="true"
	        android:text="50.4M"
	        android:textColor="@color/black"
	        android:textSize="20sp" />

	    <CheckBox
            android:id="@+id/cb_pic_clear"
            style="@style/djs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/multiselect_bg"
            android:textColor="@color/remind" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_video_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="清除视频缓存"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_video_clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_video_clear"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:text="5.5M"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_video_clear"
            style="@style/djs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/multiselect_bg"
            android:textColor="@color/remind" />
    </RelativeLayout>
        
	<LinearLayout 
	    android:id="@+id/layout_bottom"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="30dp"
	    android:layout_marginBottom="20dp"
	    android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
	    >

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#999999"
            android:text="取消" 
            android:textSize="20sp"
            android:background="@drawable/sports_btn_gray2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#160;&#160;&#160;&#160;"
            />
        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@drawable/sports_slim_btn_click1"
             />
	</LinearLayout>
</LinearLayout>