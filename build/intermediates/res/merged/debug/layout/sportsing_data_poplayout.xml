<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68C1E100"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/bigBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <com.fox.exercise.util.RoundedImage
            android:id="@+id/sports_user_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sports_user_icon"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/weather_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴天" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/area_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="山西" />

                <TextView
                    android:id="@+id/sports_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动等级" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- 时间 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/pop_imageview_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/pop_chronometerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/chronometerId_text"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- 运动公里数 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/disImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sportdetail_dis" />

        <TextView
            android:id="@+id/disValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeValue_text"
            android:textColor="@color/sports_value"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/disKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sporting_kmnum"
            android:textColor="@color/sports_value"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 热量 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/conImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sportdetail_con" />

        <TextView
            android:id="@+id/conValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/step_finish_text"
            android:textColor="@color/sports_value"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sporting_calnum"
            android:textColor="@color/sports_value"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 速度 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/speedImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sportdetail_speed" />

        <TextView
            android:id="@+id/speedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeValue_text"
            android:textColor="@color/sports_value"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speedKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sporting_speednum"
            android:textColor="@color/sports_value"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 配速 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/paceImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sportdetail_pace" />

        <TextView
            android:id="@+id/paceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/paceValue_text"
            android:textColor="@color/sports_value"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pcaeKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sporting_kmnum"
            android:textColor="@color/sports_value"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>