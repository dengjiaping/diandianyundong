<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="@string/sports_alertdialog_title"
	        android:textColor="@color/black"
	        android:textSize="20sp" />
    </LinearLayout>
    
	<TextView
	    android:id="@+id/message"
	    android:layout_marginTop="15dp" 
	    android:layout_marginBottom="15dp" 
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="请设置置顶时间"
        android:textColor="@color/hint_login"/>
	<Spinner 
	    android:id="@+id/sp_settime"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    />
	<LinearLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:background="@drawable/sports_bg_line" >
    </LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/layout_bottom"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp">
	    
	    <Button 
	        android:id="@+id/bt_cancel"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/sports_btn_gray"
	        android:text="@string/bt_cancel_text"
	        android:textSize="16sp"
	        android:textColor="@android:color/white"/>
	    
	    <Button 
	        android:id="@+id/bt_ok"
	        android:layout_marginRight="10dp"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/sports_slim_btn_click"
	        android:text="@string/bt_ok_text"
	        android:textColor="@android:color/white"
	        android:textSize="16sp"/>
	</LinearLayout>
</LinearLayout>