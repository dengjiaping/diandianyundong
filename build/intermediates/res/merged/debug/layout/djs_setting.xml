    <!-- 倒计时时间选择 -->

    <RadioGroup
        android:id="@+id/mRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <RadioButton
            android:id="@+id/djs_close"
            style="@style/djs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/sports_select_bt"
            android:text="@string/djs_close"
            android:textColor="@color/djs" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/divider" />

        <RadioButton
            android:id="@+id/djs_3"
            style="@style/djs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/sports_select_bt"
            android:text="@string/djs_3"
            android:textColor="@color/djs" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/divider" />

        <RadioButton
            android:id="@+id/djs_5"
            style="@style/djs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/sports_select_bt"
            android:text="@string/djs_5"
            android:textColor="@color/djs" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/divider" />

        <RadioButton
            android:id="@+id/djs_10"
            style="@style/djs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/sports_select_bt"
            android:text="@string/djs_10"
            android:textColor="@color/djs" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/divider" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/djs_remind"
        style="@style/djs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/multiselect_bg"
        android:text="@string/djs_remind"
        android:textColor="@color/remind" />

    </LinearLayout>
