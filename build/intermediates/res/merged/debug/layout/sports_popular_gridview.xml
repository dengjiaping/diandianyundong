<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <com.fox.exercise.view.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res/com.fox.exercise"
        android:id="@+id/pull_refresh_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:listSelector="@null"
        android:numColumns="1"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:visibility="visible"
        ptr:mode="both" />

    <TextView
        android:id="@+id/tv_refresh_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/tv_refresh_friends"
        android:textColor="@color/sports_popular_titles_normal"
        android:textSize="16sp"
       />

</RelativeLayout>