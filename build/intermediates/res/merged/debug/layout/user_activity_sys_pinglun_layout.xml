<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/find_comment_layout"
    android:layout_height="wrap_content" >

    <com.fox.exercise.util.RoundedImage
        android:id="@+id/activity_image_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/sports_user_edit_portrait" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/activity_image_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_submit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="17dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="@string/txt_name_text"
            android:textColor="@color/remind"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_submit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:gravity="left|center_vertical"
            android:text="@string/txt_name_text"
            android:textColor="#3a3f47"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_submit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/activity_submit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_submit_time"
        android:layout_marginRight="5dp"
        android:textColor="@color/black" />

</RelativeLayout>