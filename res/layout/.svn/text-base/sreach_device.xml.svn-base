<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/imgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="40dp" >

        <ImageView
            android:id="@+id/bgID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/watch_img" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/sreachImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgLayout"
        android:layout_alignRight="@+id/imgLayout"
        android:background="@drawable/search_img" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bubble_dark_background"
        android:text="@string/remote_startTxt"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

</RelativeLayout>