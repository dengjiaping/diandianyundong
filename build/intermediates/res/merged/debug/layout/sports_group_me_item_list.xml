<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	<ImageView 
	    android:layout_marginLeft="10dp"
	    android:id="@+id/sports_group_me_img"
	    android:layout_width="132dp"
	    android:layout_height="99dp"
	    android:src="@drawable/sports_bg_menu"/>
   <LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:weightSum="2"
       android:orientation="vertical"
       android:layout_marginLeft="18dp"
       >
       <TextView 
           android:id="@+id/sports_group_me_title"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:text="慢跑之路"
           android:textColor="@color/sports_value"
           android:textSize="20sp"
           android:gravity="bottom|center_horizontal"
           />
       <TextView 
           android:id="@+id/sports_group_me_detils"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:text="跑步，游泳"
           android:textColor="@color/gray_litter"
           android:textSize="16sp"
           android:gravity="top|center_vertical"
           />
   </LinearLayout>

</LinearLayout>