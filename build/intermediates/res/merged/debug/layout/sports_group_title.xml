<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="3dp" >

    <ImageView
        android:id="@+id/cursor_sports_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tab_layout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tab_bar_focus" />

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tab_2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!--
                 <RelativeLayout
                android:id="@+id/tab_sports_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >
        -->

        <TextView
            android:id="@+id/tab_sports_group"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/sports_group"
            android:textColor="#25a7f2"
            android:textSize="20sp" />
        <!-- </RelativeLayout> -->

        <TextView
            android:id="@+id/tab_sports_group_me"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/sports_group_me"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>