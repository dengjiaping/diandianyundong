<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_cicle_whrite_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/benci_train"
            android:textColor="@color/hint_login"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/benci_train_fail"
            android:textColor="@color/red"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/jianchi_success"
        android:textColor="@color/hint_login"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/train_complete_icon"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_litter"
                android:text="训练时长" />

            <TextView
                android:id="@+id/train_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffae00"
                android:text="两分钟" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/train_complete_icon"
            android:orientation="vertical"
            android:gravity="center" >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_litter"
                android:text="完成动作" />

            <TextView
                android:id="@+id/train_actionnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffae00"
                android:text="两个动作" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/train_complete_icon"
            android:orientation="vertical"
            android:gravity="center" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_litter"
                android:text="消耗能量" />

            <TextView
                android:id="@+id/train_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffae00"
                android:text="111Cal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/train_bt_ok"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sports_slim_btn_click1"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/button_ok"
        android:textColor="@color/white" />

</LinearLayout>